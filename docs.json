{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "VeriSynth Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          }
        ]
      },
      {
        "tab": "CLI reference",
        "groups": [
          {
            "group": "CLI documentation",
            "pages": [
              "cli-reference/introduction",
              "cli-reference/commands",
              "cli-reference/testing"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://www.verisynth.ai",
          "icon": "house"
        },
        {
          "anchor": "Github",
